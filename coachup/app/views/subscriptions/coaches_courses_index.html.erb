<% if current_user == @user %>
  <%= render partial: 'courses/index', locals: {
      title: 'Courses given by your coaches',
      empty_text: 'None of your coaches gives any courses right now...'
  } %>
<% else %>
  <%= render partial: 'courses/index', locals: {
      title: "Courses given by coaches of #{@user.username}",
      empty_text: "None of the coaches of #{@user.username} gives any courses right now..."
  } %>
<% end %>