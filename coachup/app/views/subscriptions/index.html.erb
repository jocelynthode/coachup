<% if @user == current_user %>
    <%= render partial: 'courses/index', locals: {
        title: 'Courses you are taking',
        empty_text: 'You are not taking any courses yet...'
    } %>
<% else %>
    <%= render partial: 'courses/index', locals: {
        title: "Courses taken by #{@user.username}",
        empty_text: "#{@user.username} doesn't take any courses yet..."
    } %>
<% end %>