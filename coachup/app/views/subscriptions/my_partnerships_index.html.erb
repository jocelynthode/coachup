<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        My Partnerships
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th>Course</th>
              <th>Coach</th>
            </tr>
            </thead>
            <tbody>

            <% @subscriptions.each do |subscription| %>
                <tr>
                  <td><%= subscription.course_id %></td>
                  <td><%= subscription.user_id %></td>
                  <td><%= link_to 'Show', subscription_path(subscription) %></td>
                  <% if user_signed_in? and current_user.id == subscription.user_id %>
                      <td><%= link_to 'Edit', edit_course_path(subscription) %></td>
                      <td><%= link_to 'Destroy', course_path(subscription),
                                      method: :delete,
                                      data: { confirm: 'Are you sure?' } %> </td>
                  <% end %>
                </tr>
            <% end %>

            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-6 -->
</div>