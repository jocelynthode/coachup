<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        <%= title %>
      </h3>
    </div>
  </div>

  <div class="form-group">
    <%= link_to 'Create Course', new_course_path, :class => "btn btn-default" %>
  </div>

  <div class="row">
  <% if @courses.present? %>
      <%= render partial: 'courses/course', collection: @courses %>
  <% else %>
      <div class="container">
          <h4><%= empty_text %></h4>
      </div>
  <% end %>
  </div>
  <!-- /.row -->
</div>