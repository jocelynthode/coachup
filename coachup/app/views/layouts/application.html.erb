<!DOCTYPE html>
<html>
<head>
  <title>Coachup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag("logo.png", :width => 150, :height => 35) %>
      <% end %>
    </div>
    <!-- /.navbar-header -->

    <ul class="nav navbar-top-links navbar-right">
      <%= link_to 'Sign Up', new_user_registration_path %>
      <%= link_to new_user_session_path  do%>
          <span class="glyphicon glyphicon-log-in"></span>
          Log In
      <% end %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <% if user_signed_in? %>
          <li>
          <%= link_to user_profile_path(current_user.id) do %>
              <span class="glyphicon glyphicon-user"></span>
               Profile
          <% end %>
          </li>
          <% end %>
          <li class="divider"></li>
          <li>
            <%= link_to destroy_user_session_path, :method => :delete do %>
                <span class="glyphicon glyphicon-log-out"></span>
                Log Out
            <% end %>
          </li>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <li class="sidebar-search">
            <div class="input-group custom-search-form">
              <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                  <i class="fa fa-search"></i>
                                </button>
                            </span>
            </div>
            <!-- /input-group -->
          </li>
          <li>
            <%= link_to courses_path do %>
                <span class="glyphicon glyphicon-home"></span>
                Courses Overview
            <% end %>
          </li>
          <li>
            <%= link_to courses_by_my_coaches_index_courses_path do %>
                <span class="glyphicon glyphicon-tasks"></span>
                Courses By My Coaches
            <% end %>
          </li>
          <li>
            <%= link_to courses_i_am_subscribed_to_index_courses_path do %>
                <span class="glyphicon glyphicon-ok"></span>
                Courses I Am Subscribed To
            <% end %>
          </li>
          <li>
            <%= link_to my_courses_index_courses_path do %>
                <span class="glyphicon glyphicon-user"></span>
                My Courses
            <% end %>
          </li>
          <li>
            <%= link_to my_partnerships_index_subscriptions_path do %>
                <span class="glyphicon glyphicon-tasks"></span>
                My Partnerships
            <% end %>


          </li>
          <li>
            <a href=""><i class="fa fa-group"></i> My Coaches</a>
          </li>
          <li>
            <%= link_to profiles_path  do %>
                <span class="glyphicon glyphicon-star"></span>
                User Profiles
            <% end %>
          </li>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
  </nav>

  <div id="page-wrapper">

      <%= yield %>

  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

</body>
</html>
